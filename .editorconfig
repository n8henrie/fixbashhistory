# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4

[LICENSE]
insert_final_newline = false

[Makefile*]
indent_style = tab

[*.yml]
indent_size = 2
